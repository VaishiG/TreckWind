<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/style.css">
    <title>ToDo List</title>
</head>
<body>
   <div class= "hoo">
    <header>
        <h1>ToDo List</h1>
    </header>   
    </div> 
    <div class="container">
        <div class="task-list">
            <h2>Places to visit</h2>
            <ul>
                <% for (let i = 0; i < todaysTasks.length; i++) { %>
                    <li class="task-item <%= todaysTasks[i].completed ? 'completed' : '' %>">
                        <span><%= todaysTasks[i].task %></span>
                        <form action="/complete/today/<%= i %>" method="POST">
                            <button class="complete-button" type="submit">Complete</button>
                        </form>
                    </li>
                <% } %>
            </ul>
        </div>
        <div class="task-list">
            <h2>People to meet</h2>
            <ul>
                <% for (let i = 0; i < workTasks.length; i++) { %>
                    <li class="task-item <%= workTasks[i].completed ? 'completed' : '' %>">
                        <span><%= workTasks[i].task %></span>
                        <form action="/complete/work/<%= i %>" method="POST">
                            <button class="complete-button" type="submit">Complete</button>
                        </form>
                    </li>
                <% } %>
            </ul>
        </div>
        <div class="add-task">
            <h3>Add New Things:</h3>
            <form action="/add" method="POST">
                <input class="task-input" type="text" name="task" placeholder="Enter a new task" required>
                <select class="task-list-select" name="list">
                    <option value="today">Places to Visit</option>
                    <option value="work">People to meet</option>
                </select>
                <button class="add-button" type="submit">Add</button>
            </form>
        </div>
    </div>
</body>
</html>
